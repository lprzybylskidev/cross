{
    "name": "Cross Laravel Dev",
    "dockerComposeFile": ["../docker-compose.yml"],
    "service": "app",
    "workspaceFolder": "/var/www",
    "remoteUser": "www-data",

    "portsAttributes": {
        "8181": { "label": "App (Nginx)", "onAutoForward": "ignore" },
        "5173": { "label": "Vite", "onAutoForward": "ignore" },
        "8025": { "label": "Mailpit", "onAutoForward": "ignore" },
        "1025": { "label": "Mailpit SMTP", "onAutoForward": "ignore" },
        "5432": { "label": "Postgres", "onAutoForward": "ignore" },
        "6379": { "label": "Redis", "onAutoForward": "ignore" }
    },

    "runServices": ["app", "postgres", "redis", "mailpit"],
    "shutdownAction": "none",

    "customizations": {
        "vscode": {
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "junstyle.php-cs-fixer",
                "amiralizadeh9480.laravel-extra-intellisense",
                "codingyu.laravel-goto-view",
                "onecentlin.laravel-blade",
                "winnie-lin.laravel-blade-snippets",
                "winnie-lin.laravel-snippets",
                "mehedidracula.php-namespace-resolver",
                "esbenp.prettier-vscode",
                "bradlc.vscode-tailwindcss",
                "mikestead.dotenv",
                "eamodio.gitlens",
                "Zignd.html-css-class-completion",
                "thekalinga.bootstrap4-vscode",
                "ecmel.vscode-html-css",
                "pranaygp.vscode-css-peek"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "esbenp.prettier-vscode",

                "[php]": {
                    "editor.defaultFormatter": "junstyle.php-cs-fixer",
                    "editor.formatOnSave": true
                },

                "files.associations": {
                    "**/*.blade.php": "blade"
                },

                "editor.wordSeparators": "./\\()\"'-:,.;<>~!@#%^&*|+=[]{}",
                "files.eol": "\n",
                "terminal.integrated.defaultProfile.linux": "bash",

                "css.lint.unknownAtRules": "ignore",
                "scss.lint.unknownAtRules": "ignore",
                "less.lint.unknownAtRules": "ignore",

                "tailwindCSS.emmetCompletions": true,
                "tailwindCSS.includeLanguages": {
                    "blade": "html",
                    "php": "html"
                },
                "editor.quickSuggestions": { "strings": true }
            }
        }
    },

    "postCreateCommand": "git config --global --add safe.directory /var/www || true"
}
